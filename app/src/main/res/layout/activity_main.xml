<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".activities.MainActivity">
    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:id="@+id/connectionStatusLayout"
        android:layout_gravity="center"
        android:layout_marginEnd="8dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="8dp">
        <tv.remo.android.controller.ui.RemoStatusView
            android:id="@+id/websiteConnectionStatusView"
            android:src="@drawable/ic_cloud_white_24dp"
            android:layout_margin="8dp"
            android:scaleType="centerInside"
            android:layout_height="@dimen/status_view_size"
            android:layout_width="@dimen/status_view_size"/>
        <tv.remo.android.controller.ui.RemoStatusView
            android:id="@+id/hardwareConnectionStatusView"
            android:src="@drawable/ic_developer_board_white_24dp"
            android:layout_margin="8dp"
            android:scaleType="centerInside"
            android:layout_height="@dimen/status_view_size"
            android:layout_width="@dimen/status_view_size"/>
        <tv.remo.android.controller.ui.RemoStatusView
            android:id="@+id/ttsConnectionStatusView"
            android:src="@drawable/ic_volume_up_white_24dp"
            android:layout_margin="8dp"
            android:scaleType="centerInside"
            android:layout_height="@dimen/status_view_size"
            android:layout_width="@dimen/status_view_size"/>
        <tv.remo.android.controller.ui.RemoStatusView
            android:id="@+id/audioConnectionStatusView"
            android:src="@drawable/ic_mic_white_24dp"
            android:layout_margin="8dp"
            android:scaleType="centerInside"
            android:layout_height="@dimen/status_view_size"
            android:layout_width="@dimen/status_view_size"/>
        <tv.remo.android.controller.ui.RemoStatusView
            android:id="@+id/videoConnectionStatusView"
            android:src="@drawable/ic_camera_alt_white_24dp"
            android:layout_margin="8dp"
            android:scaleType="centerInside"
            android:layout_height="@dimen/status_view_size"
            android:layout_width="@dimen/status_view_size"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/buttonGroupMainActivity"
            app:layout_constraintTop_toBottomOf="@+id/connectionStatusLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <Button
                android:id="@+id/settingsButton"
                android:text="@string/settings"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"/>
        <Button
                android:id="@+id/powerButton"
                android:text="@string/power"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"/>
    </LinearLayout>

    <tv.remo.android.controller.chat.RemoChatView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/buttonGroupMainActivity"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/remoChatView"/>

</androidx.constraintlayout.widget.ConstraintLayout>